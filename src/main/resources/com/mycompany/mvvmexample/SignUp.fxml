               <font>
                  <Font name="Helvetica" size="13.0" />
               </font>
            </TextField>
            <TextField fx:id="emailField" prefHeight="28.0" prefWidth="180.0" promptText="Email Address">
               <font>
                  <Font name="Helvetica" size="13.0" />
               </font>
            </TextField>
            <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#signUp" prefHeight="28.0" prefWidth="180.0" text="Sign Up">
               <font>
                  <Font name="Helvetica" size="13.0" />
